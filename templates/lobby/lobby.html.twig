{% extends 'base.html.twig' %}

{% block title %}Hello LobbyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
       font-family: roboto;
       margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;
       text-align: center;
       display: flex;
       align-items: center;
       flex-direction: column;
    }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .div-rejoindre-match {
       width: 35%;
       font-size: 30px;
       cursor: pointer;
    }

    .div-name-player:hover {
       margin-left: 10%;
    }
</style>

<div class="example-wrapper">
   <h1>LOBBY</h1>
   <div class="div-rejoindre-match">
      <a href="{{ path('create_encounters') }}">Lancer les matchs</a>
   </div>
   {% for player in lobby.queuingPlayers %}
      <div class="div-name-player">
         {{ player.name }} / {{ player.ratio }}
         </br>
      </div>
   {% endfor %}
</div>
{% endblock %}
