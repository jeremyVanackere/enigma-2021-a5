{% extends 'base.html.twig' %}

{% block title %}Hello Encounters!{% endblock %}

{% block body %}
<style>
    .container-vs-player-name, .vs {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .vs {
        font-family: roboto;
        font-size: 60px;
        font-weight: 700;
    }
    .div-name-player {
        font-size: 40px;
        padding: 10%;
        width: auto;
    }
</style>
<div>
    <h1>Encounter</h1>
</div>
    {% for encounter in encounters|MatchEnCours %}
        <div class="container-vs row">
            <div class="container-vs-player-name col-4">
                <div class="div-name-player">{{ encounter.playerA.name }} / {{ encounter.playerA.ratio }}</div>
            </div>
            <div class="vs col-4">VS</div>
            <div class="container-vs-player-name col-4">
                <div class="div-name-player">{{ encounter.playerB.name }} / {{ encounter.playerB.ratio }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="{{ path('score', { 'encounter': encounter.id }) }}">Saisir score</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
